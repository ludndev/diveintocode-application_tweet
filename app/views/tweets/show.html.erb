
<table>
  <tr>
    <td><b>ID</b></td>
    <td><%= @post.id %></td>
  </tr>
  <tr>
    <td><b>Content</b></td>
    <td><%= @post.content %></td>
  </tr>
  <tr>
    <td><b>Created At</b></td>
    <td title="<%= @post.created_at %>"><%= time_ago_in_words(@post.created_at) %></td>
  </tr>
  <tr>
    <td><b>Last Update</b></td>
    <td title="<%= @post.updated_at %>"><%= time_ago_in_words(@post.updated_at) %></td>
  </tr>
</table>

<div class="flex-container">
  <div style="flex-grow: 3; background-color: dodgerblue;"><a href="<%= update_tweet_path(id: @post.id) %>">EDIT</a></div>
  <div style="flex-grow: 3; background-color: red;"><a href="#" onclick="check()">DELETE</a></div>
</div>

<script type="text/javascript" charset="utf-8">
  function check() {
      if (confirm('Are you sure you want to delete this tweet ?')) {
          window.location = "<%= delete_tweet_path(id: @post.id) %>";
      }
  }
</script>